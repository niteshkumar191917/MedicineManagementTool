@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">

            <AuthorizeView>
                <Authorized>
                    Hello @LoggedUserName
                    <NavLink href="logout">
                        Log Out
                    </NavLink>
                </Authorized>
                <NotAuthorized>

                    <NavLink href="loginPage">
                        Log In
                    </NavLink>

                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [CascadingParameter(Name = "LoggedUserName")]
    public string LoggedUserName { get; set; }    
}
